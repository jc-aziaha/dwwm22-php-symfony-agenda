{% extends "base.html.twig" %}

{% block title %}Liste des contacts{% endblock %}

{% block description %}Consultation de la liste de mes contacts{% endblock %}

{% block keywords %}consultation, liste, contacts{% endblock %}

{% block main %}
    <h1 class="text-center display-5 my-3">Liste des contacts</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('app_contact_create')}}" class="btn btn-primary shadow">Nouveau contact</a>
    </div>

    {# read and display just one flash message type #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% if contacts|length > 0 %}
        {# Affichage du tableau #}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Prénom</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Commentaires</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{contact.firstName}}</td>
                            <td>{{contact.lastName}}</td>
                            <td>{{contact.email}}</td>
                            <td>{{contact.phone}}</td>
                            <td>{{contact.comment}}</td>
                            <td class="d-flex justify-content-center align-items-center gap-2">
                                <a href="{{path('app_contact_edit', {'id':contact.id})}}" class="btn btn-sm btn-secondary">Modifier</a>
                                <form action="{{path('app_contact_delete', {'id':contact.id})}}" method="POST">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('contact_'~contact.id)}}">
                                    <input type="submit" class="btn btn-sm btn-danger" value="Supprimer" onclick="return confirm('Confirmer la suppression?')">
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="mt-5 text-center">Aucun contact dans la liste.</p>
    {% endif %}
    

{% endblock %}
